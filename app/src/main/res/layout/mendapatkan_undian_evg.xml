<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_undianvg"
    android:scaleType="fitXY"
    tools:context=".Main_undian_evg">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="315dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/rectangle_5"
            android:layout_width="355dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rectangle_5"
            android:onClick="roulete" />

        <TextView
            android:id="@+id/diskon70"
            android:layout_width="385dp"
            android:layout_height="115dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="24sp"
            android:text="@string/diskon70h"
            android:textAppearance="@style/diskon70h" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:srcCompat="@drawable/group389" />

</androidx.constraintlayout.widget.ConstraintLayout>
