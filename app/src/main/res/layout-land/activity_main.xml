<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/background_landscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/background_landscape">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft='1dp'
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/vector1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/vector2" />

            <ImageView
                android:id="@+id/logoaqua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="180dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="180dp"
                android:layout_marginLeft="220dp"
                app:srcCompat="@drawable/group358" />
            <TextView
                android:id="@+id/kebaikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="290dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="KEBAIKAN"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/berawal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="320dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="BERAWAL"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/darisini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="320dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="DARI SINI"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/terpercaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="305dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Terpercaya lebih\n dari 45 tahun"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="301dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/ellipse217" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="721dp"
                android:layout_height="213dp"
                android:layout_marginTop="600dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/vector3" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>